<div class="items-center flex w-full justify-center">
  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <div class="mb-4">
      <%= form_with model: @expense, url: expense_path, method: "put", local: true do |f| %>
        <div class="field mb-6">
          <%= f.label :description %><br />
          <%= f.text_field :description, autofocus: true, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>
        <div class="field mb-6">
          <%= f.label :category %><br />
          <%= f.collection_select :category_id, Category.all, :id, :title %>
        </div>
        <div class="field mb-6">
          <%= f.label :price %><br />
          <%= f.text_field :price, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"%>
        </div>
        <div>
          <%= f.submit "Update", class: "bg-orange-500 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
        </div>
      <% end %>
    </div>
  </div>
</div>